test_matches_typical: TestCase;
test_matches_typical = make_test("test_matches_typical") $ |_| (
    let command = typical_command;
    let inputs = "typical -n 3 --output out.txt mytarget in.txt -- -in2.txt".split(" ").to_array;
    let matches = *command.get_matches_from(inputs).from_result;
    assert_equal("count", some("3"), matches.get_one("count"));;
    assert_equal("output", some("out.txt"), matches.get_one("output"));;
    assert_equal("TARGET", some("mytarget"), matches.get_one("TARGET"));;
    assert_equal("FILE", some(["in.txt", "-in2.txt"]), matches.get_many("FILE"));;
    assert_equal("force", none(), matches.get_one("force"));;
    assert_equal("verbose", none(), matches.get_one("verbose"));;
    assert_equal("verify", some("true"), matches.get_one("verify"));;
    assert_equal("verify get_flag", true, matches.get_flag("verify"));;
    assert_equal("no-such-arg", none(), matches.get_one("no-such-arg"));;
    pure()
);

