test_new_arg: TestCase;
test_new_arg = (
    make_test("test_new_arg") $ |_|
    let arg = Arg::new("aaa");
    assert_equal("id", "aaa", arg.@id);;
    assert_equal("short", 0_U8, arg.@short);;
    assert_equal("long", "", arg.@long);;
    assert_equal("required", false, arg.@required);;
    assert_equal("takes_value", false, arg.@takes_value);;
    assert_equal("multiple_values", false, arg.@multiple_values);;
    assert_equal("default_value", none(), arg.@default_value);;
    assert_equal("value_name", "VALUE", arg.@value_name);;
    assert_equal("help", "", arg.@help);;
    assert_true("action", arg.@action.is_set_true);;
    pure()
);

