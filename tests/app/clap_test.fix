test_matches_rich_dispatch_subcommands: TestCase;
test_matches_rich_dispatch_subcommands = make_test("test_matches_rich_dispatch_subcommands") $ |_| (
    let command = rich_command;
    let subcommand_run = command.find_subcommand("run").as_some;
    let subcommand_build = command.find_subcommand("build").as_some;
    let handle_run = |submatches| (
        let file = submatches.get_many("FILE");
        let verbose = submatches.get_one("verbose");
        pure $ (file, verbose).format("name=run FILE={} verbose={}")
    ): IOFail String;
    let handle_build = |submatches| (
        let file = submatches.get_many("FILE");
        let verbose = submatches.get_one("verbose");
        let dylib = submatches.get_one("dynamic_lib");
        pure $ (file, verbose, dylib).format("name=build FILE={} verbose={} dylib={}")
    ): IOFail String;

    [
        ("rich run in1.txt", "name=run FILE=some([in1.txt]) verbose=none()"),
        ("rich build in1.txt in2.txt -v -d mylib -v", "name=build FILE=some([in1.txt, in2.txt]) verbose=some(2) dylib=some(mylib)"),
    ]
    .to_iter.foreach_m(
        |(input, expected)|
        let inputs = input.split(" ").to_array;
        let matches = *command.get_matches_from(inputs).from_result;
        let actual = *matches.dispatch_subcommands([
            (subcommand_run, handle_run),
            (subcommand_build, handle_build),
        ]);
        assert_equal("eq", expected, actual)
    )
);

test_matches_boolean: TestCase;
test_matches_boolean = (
    make_table_test("test_matches_boolean",
        do {
            let _default_value = *[none(), some("true"), some("false")];
            let _action = *["", "set_true", "set_false"];
            let _option = *["", "--arg", "--no-arg"];
            let _expected = (
                if _option == "--arg" {
                    if _action == "set_false" { some("false") } else { some("true") }
                } else if _option == "--no-arg" {
                    if _action == "set_false" { some("true") } else { some("false") }
                } else {
                    _default_value
                }
            );
            pure $ (_default_value, _action, _option, _expected)
        },
        |(_default_value, _action, _option, _expected)|
        let command = Command::new("command").arg(
            let arg = Arg::new("arg").long("arg");
            let arg = if _default_value.is_some { arg.default_value(_default_value.as_some) } else { arg };
            let arg = if _action == "set_true" { arg.set_action(set_true()) }
            else if _action == "set_false" { arg.set_action(set_false()) }
            else { arg };
            arg
        );
        let inputs = ("command " + _option).split(" ").filter(|s| !s.is_empty).to_array;
        let matches = *command.get_matches_from(inputs).from_result;
        assert_equal("arg", _expected, matches.get_one("arg"));;
        pure()
    )
);

test_error: Command -> String -> String -> TestCase;
test_error = |command, cmdline, expected| (
    let testname = "test_error(" + cmdline + ")";
    make_test(testname) $ |_|
    let inputs = cmdline.split(" ").to_array;
    let res = command.get_matches_from(inputs);
    assert_true("err", res.is_err);;
    assert_equal("err", expected, res.as_err);;
    pure()
);

test_errors: TestCase;
test_errors = (
    [
        test_error(empty_command, "cmd junk", "Found argument 'junk' which wasn't expected, or isn't valid in this context"),
        test_error(typical_command, "typical -X", "Found argument '-X' which wasn't expected, or isn't valid in this context"),
        test_error(typical_command, "typical --no-such", "Found argument '--no-such' which wasn't expected, or isn't valid in this context"),
        test_error(typical_command, "typical", "The following required arguments were not provided:\n    <TARGET>\n"),
        test_error(typical_command, "typical -n", "The argument '-n' requires a value but none was supplied"),
        TestCase::empty
    ]
    .run_tests
);

